<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :title %><br />
	<%= f.text_field :title %>

	<%= f.label :content %><br />
	<%= f.text_area :content %><br />

	<%= f.label :photo %><br />
	<%= f.file_field :photo %><br />

	<%= f.label :post_type %><br />
	<%= f.select :post_type, Post::TYPES %><br />

	<%= f.submit %>
<% end %>
