<%= form_for(@post, :html => {:multipart => true}) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :title %>
	<%= f.text_field :title %><br />

	<%= f.label :content %>
	<%= f.text_area :content, :style => "width:80%" %><br />

	<%= f.label :post_type %>
	<%= f.select :post_type, Post::TYPES %><br />

	<%= f.fields_for :images do |builder| %>
		<%= render 'image_fields', :f => builder %>
	<% end %>
	<br />
	<%= link_to_add_fields raw("<i class='icon-plus'></i>"), f, :images %><br />
	<br />
	<%= f.submit %>
<% end %>
