<% Time.zone = "EST" %>

<h2><%= @post.title %></h2>
<% if signed_in? && User.current_user.is_admin? %>
	<%= link_to "Edit", edit_post_path(@post.id) %> | <%= link_to "Delete", post_path(@post), method: :delete, confirm: "Are you sure?" %>
<% end %>

<p>Posted by: <%= @post.user.name %><br />
<em><%= @post.created_at.in_time_zone.to_formatted_s(:long) %></em></p>
<div id='post_content'>
	<%= @post.content.html_safe %>
</div>

<div id='disqus_thread' class='comments'>
	<%= disqus_thread.html_safe %>
</div>
