<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %><br />
	<%= f.text_field :email %>

	<%= f.label :password %><br />
	<%= f.password_field :password %><br />

	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation %><br />

	<%= label_tag :secret_key %>
	<%= password_field_tag :secret_key %><br />

	<%= f.submit %>
<% end %>
